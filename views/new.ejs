<div class="container">
   <h1>Add new post</h1>
   <form action="/" method="POST">
       <div class = "form-group">
           <label>enter your name</label>
           <input type="text" class="form-control" name=blog[title] placeholder="your name">
           <label>enter Image url</label>
           <input type="text" class="form-control" name= blog[image] placeholder="image url">
           <label>Blog's body</label>
           <div contenteditable="true">
            <textarea type="text" class="form-control" name=blog[description] cols="10" rows = "20"></textarea>
           </div>
           <div>
                 <input type="submit">
           </div>
  
       </div>  
   </form>
</div>

