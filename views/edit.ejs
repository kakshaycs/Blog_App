<%- include("partials/header") %>


<div class="container">
   <h1>Edit your post</h1>
   <form action="/" method="POST">
       <div class = "form-group">
           <label>Name</label>
           <input type="text" class="form-control" value="<%=x.title%>" name=blog[title] placeholder="your name">
           <label>Image url</label>
           <input type="text" class="form-control" value="<%=x.image%>" name= blog[image] placeholder="image url">
           <label>Blog's body</label>
           <div contenteditable="true">
            <textarea type="text" class="form-control" name=blog[description] cols="10" rows = "20"><%=x.description%></textarea>
           </div>
           <div>
                 <input type="submit">
           </div>
  
       </div>  
   </form>
</div>

<%- include("partials/footer") %>